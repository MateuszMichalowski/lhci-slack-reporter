{
  "name": "lhci-slack-reporter",
  "version": "1.0.7",
  "description": "GitHub Action to run Lighthouse tests and report to Slack",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write **/*.ts",
    "all": "npm run lint && npm run format && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MateuszMichalowski/lhci-slack-reporter.git"
  },
  "keywords": [
    "github",
    "action",
    "lighthouse",
    "slack",
    "performance",
    "accessibility",
    "seo",
    "best-practices"
  ],
  "author": "Mateusz Micha≈Çowski",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "2.3.2",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "glob": "^11.0.1",
    "lighthouse": "^11.0.0",
    "@slack/webhook": "^7.0.1",
    "@slack/web-api": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
